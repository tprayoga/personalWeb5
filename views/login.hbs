<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="public/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Login</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #142850">
      <div class="container">
        <a class="navbar-brand" href="/home"><img src="public/Asset/brandwhite.png" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="/add-project">Add Project</a>
              </li>
            {{/if}}
          </ul>
        </div>
        <div>
          <div class="collapse navbar-collapse" id="navbarNav">
            {{#if isLogin}}
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="#">Heloo, {{user.name}}</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              </ul>

            {{else}}
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="/register">Register</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" href="/login">Login</a>
                </li>
              </ul>
            {{/if}}
          </div>

        </div>

        <div class="nav-item">
          <a class="nav-link active" style="background-color: #394867; color: white; border-radius: 8px" href="/contact">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- Akhir Navbar -->

    <!-- Form -->
    <div>
      <form action="/login" method="post" style="width: 500px; margin: 50px auto">
        <h2 style="display: flex; margin-bottom: 50px; text-align: center; justify-content: center"><strong>LOGIN TO YOUR ACCOUNT</strong></h2>
        {{#if messages.danger}}
          <div class="alert alert-danger" role="alert">{{messages.danger}}</div>
        {{/if}}

        {{#if messages.succes}}
          <div class="alert alert-success" role="alert">{{messages.succes}}</div>
        {{/if}}

        <div style="margin-top: 15px">
          <label for="input-email" style="font-weight: bold; font-size: 20px; cursor: pointer">Email</label>
          <input
            type="email"
            id="inputEmail"
            placeholder="Email"
            name="inputEmail"
            style="background-color: rgb(232, 235, 235); width: 100%; box-shadow: 3px 3px #7c99ac; padding: 10px; margin-top: 5px; border-radius: 5px; border: 1px solid rgb(209, 207, 207)"
          />
        </div>

        <div style="margin-top: 15px">
          <label for="input-phone" style="font-weight: bold; font-size: 20px; cursor: pointer">Password</label>
          <input
            type="password"
            id="inputPassword"
            placeholder="Password"
            name="inputPassword"
            style="background-color: rgb(232, 235, 235); width: 100%; box-shadow: 3px 3px #7c99ac; padding: 10px; margin-top: 5px; border-radius: 5px; border: 1px solid rgb(209, 207, 207)"
          />
        </div>

        <div style="display: flex; text-align: center; justify-content: flex-end">
          <button style="background-color: #1c658c; color: white; margin-top: 30px; border: none; padding: 10px 33px; border-radius: 20px; cursor: pointer" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>