<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="public/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Add Project</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #142850">
      <div class="container">
        <a class="navbar-brand" href="/home"><img src="public/Asset/brandwhite.png" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link active" href="/add-project">Add Project</a>
              </li>
            {{/if}}
          </ul>
        </div>
        <div>
          <div class="collapse navbar-collapse" id="navbarNav">
            {{#if isLogin}}
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="#">Heloo, {{user.name}}</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              </ul>

            {{else}}
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="/register">Register</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              </ul>
            {{/if}}
          </div>

        </div>

        <div class="nav-item">
          <a class="nav-link active" style="background-color: #394867; color: white; border-radius: 8px" href="/contact">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- Akhir Navbar -->

    <!-- Form -->
    <div >
         <form action="/add-project" method="post" enctype="multipart/form-data" style="width: 500px; margin: 50px auto;">
            <h2 style="display: flex;
            margin-bottom: 50px;
            text-align: center;
            justify-content: center;"><strong>
            ADD MY PROJECT</strong></h2>

        <div>
            <label style="font-weight: bold; font-size: 20px;cursor: pointer;" for="input-name">Project
                Name</label>
            <input name="projectName" type="text" id="input-name" placeholder="" style=" 
                background-color: rgb(232, 235, 235); 
                width: 100%;
                padding: 10px;
                margin-top: 5px;
                border-radius: 5px;
                border: 1px solid rgb(209, 207, 207);
                box-shadow: 3px 3px #7C99AC;" />
        </div>

        <div style="display: flex; gap: 20px;">
            <div style="margin-top: 15px;">
                <label for="input-start" style="font-weight: bold; font-size: 20px;cursor: pointer;">Start
                    Date</label>
                <input name="inputDateStart" type="date" id="input-start" placeholder="" style="
                    background-color: rgb(232, 235, 235); 
                    width: 100%;
                    box-shadow: 3px 3px #7C99AC; 
                    padding: 10px;
                    margin-top: 5px;
                    border-radius: 5px;
                    border: 1px solid rgb(209, 207, 207)" />
            </div>

            <div style="margin-top: 15px;">
                <label for="input-end" style="font-weight: bold; font-size: 20px;cursor: pointer;">End
                    Date</label>
                <input name="inputDateEnd" type="Date" id="input-end" placeholder="" style="
                    background-color: rgb(232, 235, 235); 
                    width: 100%;
                    box-shadow: 3px 3px #7C99AC; 
                    padding: 10px;
                    margin-top: 5px;
                    border-radius: 5px;
                    border: 1px solid rgb(209, 207, 207)" />
            </div>
        </div>

        <div style="margin-top: 15px;">
            <label for="input-decription"
                style="font-weight: bold; font-size: 20px;cursor: pointer;">Description</label>
            <textarea name="inputDesc" id="input-description" style="
                background-color: rgb(232, 235, 235); 
                width: 100%; 
                padding: 10px;
                margin-top: 5px;
                border-radius: 5px;
                box-shadow: 3px 3px #7C99AC;
                border: 1px solid rgb(209, 207, 207);
                height: 100px;
                resize: vertical;">
            </textarea>
        </div>

        <div style="margin-top: 15px;">
            <label for style="font-weight: bold; font-size: 20px;cursor: pointer;">Technologies</label>
            <div style="display: flex; gap: 150px; margin-top: 10px;">
                <div>
                    <div>
                        <input name="inputNode" type="checkbox" id="input-node" />
                        <label for="nodejs">Node JS</label>
                    </div>
                    <br>
                    <div>
                        <input name="inputReact" type="checkbox" id="input-react"  />
                        <label for="reactjs">React JS</label>
                    </div>
                </div>
                <div>
                    <div>
                        <input name="inputNext" type="checkbox" id="input-next"  />
                        <label for="nextjs">Next JS</label>
                    </div>
                    <br>
                    <div>
                        <input name="inputType" type="checkbox" id="input-type" />
                        <label for="typescript">TypeScript</label>
                    </div>
                </div>
            </div>
        </div>

        <div style="margin-top: 15px;">
            <label for="input-image" style="font-weight: bold; font-size: 20px;cursor: pointer;">Upload
                Image</label>
            <div style="background-color: rgb(232, 235, 235); 
                        width: 100%;
                        margin-top: 5px;
                        border-radius: 5px;
                        border: 1px solid rgb(209, 207, 207);
                        box-shadow: 3px 3px #7C99AC;">
                <label style=" cursor: pointer; display: flex; align-items: center; justify-content: space-between;
                height: 50px;" for="input-image">
                    <p style=" width: 20%;
                    margin-bottom: 0;
                padding-left: 15px;
                height: 100%;
                display: flex;
                align-items: center;
                background: #c3cecc;
                color: rgb(107, 106, 106);
                border: 1px solid #c4c4c4;
                border-radius: 5px;
                font-size: 20px;">Choose</p>
                    <i style="font-size: 25px; margin-right: 15px;" class="fa-solid fa-image"></i>
                </label>
                <input name="input-image" type="file" id="input-image" hidden>
            </div>

            <div style="display: flex;
                    text-align: center;
                    justify-content: flex-end;">
                <button type="submit" style="
                background-color:#1c658c; 
                color:white;
                margin-top: 30px;
                border: none;
                padding: 10px 33px;
                border-radius: 20px;
                cursor:pointer;">
                    Submit
                </button>
            </div>

        </form>
    </div>
  </body>
</html>
