<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../public/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Add Project</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #142850">
      <div class="container">
        <a class="navbar-brand" href="/"><img src="/public/Asset/brandwhite.png" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link" href="/add-project">Add Project</a>
              </li>
            {{/if}}
          </ul>
        </div>
        <div>
          <div class="collapse navbar-collapse" id="navbarNav">
            {{#if isLogin}}
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="#">Heloo, {{user.name}}</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              </ul>

            {{else}}
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="/register">Register</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              </ul>
            {{/if}}
          </div>

        </div>

        <div class="nav-item">
          <a class="nav-link active" style="background-color: #394867; color: white; border-radius: 8px" href="/contact">Contact Me</a>
        </div>
      </div>
    </nav>
    <!-- Akhir Navbar -->

    <!-- Form -->
    <div class="detail-project">
      <div>
        <h1>{{projects.title}}</h1>
      </div>

      <div class="detail">
        <div class="detail-image">
          <img src="/uploads/{{projects.image}}" alt="1212" />
        </div>

        <div class="detail-right">
          <div>
            <h3>Duration</h3>
            <p><i class="fa-solid fa-calendar-days"></i> {{projects.startDate}} - {{projects.endDate}}</p>
            <p><i class="fa-solid fa-hourglass-start"></i>{{projects.duration}}</p>
          </div>

          <div>
            <div>
              <h3>Technologies</h3>
            </div>

            <div class="detail-right2">

              {{#if projects.node}}
                <p><i class="fa-brands fa-node"></i> Node JS</p>
              {{/if}}

              {{#if projects.react}}
                <p><i class="fa-brands fa-react"></i> React JS</p>
              {{/if}}

              {{#if projects.next}}
                <p><i class="fa-brands fa-connectdevelop"></i> Next JS</p>
              {{/if}}

              {{#if projects.type}}
                <p><i class="fa-brands fa-js-square"></i> Java Script</p>
              {{/if}}

            </div>
          </div>
        </div>
      </div>

      <div class="content-item">
        <p>
          {{projects.description}}
        </p>
      </div>
    </div>
  </body>
</html>